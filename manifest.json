{
  "manifest_version": 2,

  "name": "Bookmark+",
  "description": "Bookmark that doesn't suck.",
  "version": "0.1",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": {
      "19": "img/ext-icon-19.png",
      "38": "img/ext-icon-38.png"
    },
    "default_title": "My bookmarks"
  },

  "icons": {
    "16": "img/ext-icon-16.png",
    "48": "img/ext-icon-48.png",
    "128": "img/ext-icon-128.png"
  },

  "background": {
    "scripts": [
      "menu.js",
      "lib/sha1.js",
      "lib/jquery.min.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery.min.js", "content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "notifications",
    "https://quiet-headland-7786.herokuapp.com/"
  ]
}
